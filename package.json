{
    "name": "vue3-typescript-esbuild-bootstrap5",
    "version": "1.0.0",
    "description": "Vue.js 3 + TypeScript + ESBuild + Bootstrap 5 + LiveReload Template",
    "type": "module",
    "scripts": {
        "build": "node esbuild.config.js prod",
        "watch": "node esbuild.config.js dev",
        "serve": "serve dist -p 8000",
        "dev": "concurrently \"npm run watch\" \"npm run serve\" \"npm run livereload\"",
        "livereload": "livereload dist/",
        "eslint": "eslint ."
    },
    "keywords": [
        "esbuild",
        "vue",
        "vue 3",
        "bootstrap",
        "bootstrap 5",
        "livereload",
        "typescript"
    ],
    "author": "ebolax",
    "license": "ISC",
    "devDependencies": {
        "@types/bootstrap": "^5.1.6",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "bootstrap": "^5.1.3",
        "concurrently": "^6.4.0",
        "esbuild": "^0.13.15",
        "esbuild-plugin-vue3": "^0.2.4",
        "eslint": "^8.3.0",
        "eslint-plugin-vue": "^8.1.1",
        "livereload": "^0.9.3",
        "serve": "^13.0.2",
        "vue": "^3.2.22",
        "vue-router": "^4.0.12"
    }
}